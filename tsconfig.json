{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true
  },
  "esModuleInterop": true,
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true,
  "resolveJsonModule": true,
  "baseUrl": "./",
  "paths": {
    "components/*": ["src/components/*"],
    "screens/*": ["src/screens/*"],
    "hooks/*": ["src/hooks/*"],
    "contexts/*": ["src/contexts/*"]
  },
  "include": ["src/**/*"]
}
